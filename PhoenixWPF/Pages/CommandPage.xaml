<Page x:Class="PhoenixWPF.Pages.CommandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoenixWPF.Pages"
      xmlns:controls="clr-namespace:PhoenixWPF.Pages.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="CommandPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="CommandDataGrid" />
        <Canvas Grid.Column="0" Grid.Row="1" Margin="0,0,0,0" Height="320" VerticalAlignment="Top">
            <controls:ConstructOverlay Margin="0,-30,0,0" />
        </Canvas>
        <Canvas Grid.Column="0" Grid.Row="1" Margin="-60,0,0,0" Height="320" VerticalAlignment="Top">
            <controls:CommandOverlay Margin="50,10,-228,-370" />
        </Canvas>
    </Grid>
</Page>
